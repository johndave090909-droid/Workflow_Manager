{
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/google-drive/**",
        "function": {
          "functionId": "googleDriveApi",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/worker-roster/google/**",
        "function": {
          "functionId": "workerRosterGoogleApi",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/send-facebook-message",
        "function": {
          "functionId": "sendFacebookMessage",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
