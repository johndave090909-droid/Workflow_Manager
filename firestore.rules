rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Screenshots collection: open read/write so GitHub Actions can push records
    match /screenshots/{doc} {
      allow read, write: if true;
    }

    // Workflow execution state: open read/write so localhost can broadcast to live site
    match /workflow_state/{doc} {
      allow read, write: if true;
    }

    // Everything else requires a signed-in user
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
